<div class="container">
	<div class="row">

      <div class="col-md-6 col-sm-6 col-xs-12">

			<h1>New article</h1>
			<br />
			<% if !@error.nil? %>
				<div class="alert alert-danger" role="alert" id="error">
					
						<p style="color: #A94446">
							<% @error.each do |e|%>
								<%= e %>.
							<% end %>
						</p>
					
				</div>
			<% end %>

			<%= form_for :article, url: articles_path do |f| %>

				<p>
					<label class="sr-only" for="name">Title</label>
					<%= f.text_field :title, class: 'form-control', placeholder: "Title" %>
				</p>

				<p>
					<label class="sr-only" for="name">Post</label>
					<%= f.text_area :text, class: 'form-control', placeholder: "Post", rows: 4 %>
				</p>

				
				 <div class="text-right">
					<%= f.submit 'Submit', class: 'btn btn-primary btn-md'  %>
				 </div>
					
				
			<% end %>
		</div>

		<div class="col-md-2 col-sm-2 col-xs-0">
        </div>
        
		<div class="col-md-4 col-sm-4 col-xs-12">

			<div class="well text-center">
         		<p class="lead">
	            	Don't want to miss updates?  Please click to bellow button!
	          	</p>
	          	<button class="btn btn-primary btn-lg">Subscribe to my feed</button>
	        </div>

	   		 <div class="panel panel-default">
		        	<div class="panel-heading">
		            	<h4>Latest Comments</h4>
		       		 </div>

		        <ul class="list-group">
		        <% if !@comments.nil?%>
		          <% @comments.limit(5).each do |c|%>
	              	<li class="list-group-item">
	            	 <%= link_to "#{truncate(c.body, :length => 50, :separator => ' ')}", article_path(c.article_id)%>   - <em><%= c.author%></em>

	            	</li>
	              <% end %>
	            <% else %>
	            	<li class="list-group-item">Комментариев еще нет</li>
	            <% end %>
		        </ul>     
	        </div>
        </div>
	</div>
</div>

